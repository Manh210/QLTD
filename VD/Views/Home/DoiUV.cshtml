@model VD.Models.UngVien

@{
    ViewBag.Title = "DoiUV";
    Layout = "~/Views/Shared/_MainPage.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đổi thông tin ứng viên | Wavefire Coding</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/styles/style.css">
    <style>
        /* Your custom CSS styles here */

        .box-container {
            margin-left: 400px; /* Căn lề trái */
            margin-right: 400px; /* Căn lề phải */
            padding-top: 200px;
        }
    </style>
</head>
<body>
    <div class="main-wrap">
        <div class="box-container ">
            <h2 class="text-center mb-4">Đổi thông tin ứng viên</h2>
            <form action="~/Home/DoiUV" method="post" enctype="multipart/form-data">
                @Html.HiddenFor(model => model.ID_UV)
                <div class="form-group">
                    <label for="HoTen">Họ và tên:</label>
                    <input type="text" class="form-control" id="HoTen" name="HoTen" value="@Model.HoTen" required>
                </div>
                <div class="form-group">
                    <label for="DOB">Ngày tháng năm sinh:</label>
                    <input type="date" class="form-control" id="DOB" name="DOB" value="@Model.DOB" required>
                </div>
                <div class="form-group">
                    <label for="GioiTinh">Giới tính:</label>
                    <select class="form-control" id="GioiTinh" name="GioiTinh" required>
                        <option value="@Model.GioiTinh">@Model.GioiTinh</option>
                        <option value="Nam">Nam</option>
                        <option value="Nữ">Nữ</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="SDT">Số điện thoại:</label>
                    <input type="tel" class="form-control" id="SDT" name="SDT" value="@Model.SDT" required>
                </div>
                <div class="form-group">
                    <label for="Email">Email:</label>
                    <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required>
                </div>
                <div class="form-group">
                    <label for="CV">CV:</label>
                    <input type="file" class="form-control-file" id="CV" name="CV" accept=".pdf,.doc,.docx" value="@Model.CV">
                </div>
                <div class="form-group">
                    <label for="SYLL">Sơ yếu lý lịch:</label>
                    <input type="file" class="form-control-file" id="SYLL" name="SYLL" accept=".pdf,.doc,.docx" value="@Model.SYLL">
                </div>
                <div class="form-group">
                    <label for="ID_DD">Địa điểm</label>
                    <select class="form-control" id="ID_DD" name="ID_DD" required>
                        <option value="">Chọn địa điểm</option>
                        @foreach (var dd in ViewBag.DiaDiems)
                        {
                            <option value="@dd.ID_DD" @Html.Raw(dd.ID_DD == Model.ID_DD ? "selected" : "")>@dd.TenDD</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="ID_TK">ID tài khoản:</label>
                    <input type="text" class="form-control" id="ID_TK" name="ID_TK" value="@Model.ID_TK" required>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Xác nhận</button>
                </div>
            </form>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>


