@model VD.Models.CongViec
@*@model VD.Models.ViewModel.CongViecViewModel*@
@{
    ViewBag.Title = "Add_CV";
    Layout = "~/Views/Shared/_MainPageNTD.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm mới công việc</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin thêm mới công việc</h3>
        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Add_CV", "QLCV", FormMethod.Post))
                {
                    <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                        <div class="form-group">
                            <label for="TeCV">Tên công việc</label>
                            <input type="text" class="form-control" id="TeCV" name="TeCV" placeholder="công việc" required>
                        </div>
                        <div class="form-group">
                            <label for="MoTaCV">Mô tả</label>
                            <input type="text" class="form-control" id="MoTaCV" name="MoTaCV" placeholder="Mô tả">
                        </div>
                        <div class="form-group">
                            <label for="LoaiViec">Loại việc</label>
                            <input type="text" class="form-control" id="LoaiViec" name="LoaiViec" placeholder="Loại việc">
                        </div>
                        <div class="form-group">
                            <label for="ID_NN">Ngành nghề</label>
                            <select class="form-control" id="ID_NN" name="ID_NN" required>
                                <option value="">Chọn ngành nghề</option>
                                @foreach (var nn in ViewBag.NganhNghes)
                                {
                                    <option value="@nn.ID_NN">@nn.TenNN</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="ID_LV">Lĩnh vực</label>
                            <select class="form-control" id="ID_LV" name="ID_LV" required>
                                <option value="">Chọn lĩnh vực</option>
                                @foreach (var lv in ViewBag.LinhVucs)
                                {
                                    <option value="@lv.ID_LV">@lv.TenLV</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="ID_DD">Địa điểm</label>
                            <select class="form-control" id="ID_DD" name="ID_DD" required>
                                <option value="">Chọn địa điểm</option>
                                @foreach (var dd in ViewBag.DiaDiems)
                                {
                                    <option value="@dd.ID_DD">@dd.TenDD</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="ID_NTD">Nhà tuyển dụng</label>
                            <select class="form-control" id="ID_NTD" name="ID_NTD" required>
                                <option value="">Chọn nhà tuyển dụng</option>
                                @foreach (var lv in ViewBag.NhaTuyenDungs)
                                {
                                    <option value="@lv.ID_NTD">@lv.TenNTD</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            @{ var taiKhoan = Session["TaiKhoan"] as VD.Models.TaiKhoan;}
                            <a href="/QlCV/Index_CV/@taiKhoan.ID_TK" class="btn btn-danger">Quay lại</a>
                            <button type="submit" class="btn btn-primary">Thêm mới</button>
                        </div>
                    </div>
                }
            </div>
            <!-- /.card-body -->
            <div class="card-footer">

            </div>
            <!-- /.card-footer-->
        </div>
        <!-- /.card -->

</section>
<!-- /.content -->
